<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="184.2dp"
            android:layout_height="45.6dp"
            android:layout_gravity="center"
            android:background="@drawable/text_logo"/>

        <TextView
            android:id="@+id/et_wname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="정말 삭제하시겠습니까?"
            android:textSize="25sp"
            android:textColor="@color/logopurple"
            android:fontFamily="@font/spoqahansansneo_medium"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="#00ff0000"
                android:fontFamily="@font/spoqahansansneo_medium"
                android:padding="15dp"
                android:text="삭제"
                android:textColor="@color/logoBlue"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="#00ff0000"
                android:fontFamily="@font/spoqahansansneo_medium"
                android:padding="15dp"
                android:text="취소"
                android:textColor="@color/logoBlue"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>